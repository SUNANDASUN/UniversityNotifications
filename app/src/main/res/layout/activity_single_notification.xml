<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context="com.indianservers.universitynotifications.SingleNotificationActivity">
    <ScrollView
        android:id="@+id/normallayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#ffff"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_gravity="right"
                android:id="@+id/textdate"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/textsub"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DDDDDD"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imge"
                android:src="@drawable/calender"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DDDDDD"/>
            <TextView
                android:layout_below="@+id/textsub"
                android:id="@+id/textdesc"
                android:textStyle="bold"
                android:textColor="#FFAB9FBF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>

            <Button
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:layout_below="@+id/textsub"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:id="@+id/readmore"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Read More"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
<android.support.v4.widget.NestedScrollView
    android:visibility="gone"
    android:id="@+id/qlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffff"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="IV B. Tech I Semester (R13) Civil QP"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subjectq"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Exam Name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/examName"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Type Of Regulation"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/examType"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>
    <TextView
        android:padding="10sp"
        android:text=" are required to do hard work and also smart work according to the requirements of the syllabus. Time management is also very important to the students to achieve their goal to complete the graduation and post graduation and other higher studies. There are so many disciplines in graduation and post graduation in JNTU. There three branches of JNTU. They are nothing but Jawaharlal Nehru Technological University Ananthapur, Jawaharlal Nehru Technological University Kakinada, Jawaharlal Nehru Technological University Hyderabad."
        android:id="@+id/subjectDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<TextView
    android:padding="10dp"
    android:textColor="@color/colorAccent"
    android:layout_marginTop="10dp"
    android:text="You Can Download pdf From link given below"
    android:textSize="15dp"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pdfLink"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold"
    android:textSize="20dp"
    android:typeface="sans"
    android:padding="10dp"
    android:text="http://jntuworld.in/wp-content/uploads/2017/11/2W_41btrs02.pdf"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/webviewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/same"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/cancelwebview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/colorText"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cancelwebview"/>
        </RelativeLayout>
    <WebView
        android:layout_below="@+id/same"
        android:id="@+id/jntuwebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>
    </RelativeLayout>
</RelativeLayout>
