<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#B7B7B7"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#FFFF"
                android:text="10"
                android:layout_weight="2"/>

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout"
                android:orientation="vertical">

                <WebView
                    android:visibility="gone"
                    android:id="@+id/questionwebview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"></WebView>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/questionimageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>


        <WebView
            android:layout_margin="5dp"
            android:id="@+id/opt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="#ffff"
            android:padding="10dp"
            android:text="opt1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />
        <WebView
            android:visibility="gone"
            android:id="@+id/opt1webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></WebView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/opt1imageview"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"/>
        <WebView
            android:layout_margin="5dp"
            android:id="@+id/opt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:background="#ffff"
            android:text="opt2"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />
        <WebView
            android:visibility="gone"
            android:id="@+id/opt2webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></WebView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/opt2imageview"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"/>
        <WebView
            android:layout_margin="5dp"
            android:id="@+id/opt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:background="#ffff"
            android:text="opt3"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />
        <WebView
            android:visibility="gone"
            android:id="@+id/opt3webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></WebView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/opt3imageview"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"/>
        <WebView
            android:layout_margin="5dp"
            android:id="@+id/opt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:background="#ffff"
            android:text="opt4"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />
        <WebView
            android:visibility="gone"
            android:id="@+id/opt4webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></WebView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/opt4imageview"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"/>
        <WebView
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/opt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:text="opt5"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />
        <WebView
            android:visibility="gone"
            android:id="@+id/opt5webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></WebView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/opt5imageview"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#66BB6A"
            android:text="Finish"
            android:visibility="gone" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/share"
                android:background="@color/colorAccent"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Ask Your Friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="2dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/fifty"
                android:background="@color/colorAccent"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="50-50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="2dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/rough"
                android:background="@color/colorAccent"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Rough Work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <WebView
                android:id="@+id/descc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FBE9E7"
                android:padding="3dp"
                android:visibility="invisible"
                tools:ignore="WebViewLayout" />

        </ScrollView>
    </LinearLayout>
</ScrollView>
</LinearLayout>